<Page x:Class="Integracao_Windows.Encomendas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Integracao_Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Encomendas">

    <Grid>
        <DataGrid Name="gridEncomendas" AutoGenerateColumns="False" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Header="ID Wordpress"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Estado}" Header="Estado"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Endereco}" Header="Endereço"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
